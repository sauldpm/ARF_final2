<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layout_informacion"
        android:background="@drawable/efecto"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/client_firstname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_gravity="center"
            android:textSize="@dimen/proyectos_item"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/client_lastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_gravity="center"
            android:textSize="@dimen/proyectos_item"
            android:textColor="@color/black"/>

        <!--<TextView
            android:id="@+id/client_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/client_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_gravity="center"/>-->
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/eliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/image_button_margin"
        android:src="@drawable/ic_delete_50dp"
        android:background="@color/rojo"
        android:backgroundTint="@color/rojo"
        app:backgroundTint="@color/rojo" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/cambiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/image_button_margin"
        android:src="@drawable/ic_create_black_24dp"
        android:background="@color/verde"
        android:backgroundTint="@color/verde"
        app:backgroundTint="@color/verde"/>
</LinearLayout>