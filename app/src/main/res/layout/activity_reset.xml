<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".RecuperarPassword.ResetActivity">

    <LinearLayout
        android:id="@+id/reset_pass_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textViewTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NUEVA CONTRSEÑA"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textViewInstruction"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:text="Ingrese su nueva contraseña"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/new_pass_text"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:hint="@string/new_pass"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:background="@color/colorWhite"
                android:ems="10"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/new_pass_text_confirm"
                android:hint="@string/confirm_new_pass"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@color/colorWhite"
                android:ems="10"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_eviar_correo"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="ENVIAR"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="REGRESAR"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/progressbar1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        android:src="@drawable/spinner" />
</LinearLayout>