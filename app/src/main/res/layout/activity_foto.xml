<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Escenarios.FotoActivity"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/texto_imagenes"
                    android:text="Fotografia"
                    android:textColor="#fff"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/btn_foto_borrar"
                    android:layout_width="49dp"
                    android:layout_height="46dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/image_button_margin"
                    android:background="@android:color/transparent"
                    android:elevation="0dp"
                    android:src="@drawable/ic_delete_50dp" />
                <ImageButton
                    android:id="@+id/btn_foto_regresar"
                    android:layout_width="49dp"
                    android:layout_height="46dp"
                    android:layout_gravity="right"
                    android:layout_margin="@dimen/image_button_margin"
                    android:background="@android:color/transparent"
                    android:elevation="0dp"
                    android:src="@drawable/ic_arrow_white_white_40dp" />
            </FrameLayout>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <ImageView
        android:id="@+id/imagen_foto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp" />
</LinearLayout>